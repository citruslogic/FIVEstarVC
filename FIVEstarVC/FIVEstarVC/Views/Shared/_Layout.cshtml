<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="col-lg-offset-2">

        <h1>
            
            @if (User.Identity.IsAuthenticated)
            {
                <text>Welcome to FIVE STAR Resident Management System, </text>
                @User.Identity.Name
            }
        </h1>
    </div>
    <div class="navbar navbar-nav" style="background-color: #010039">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")<span class="glyphicon glyphicon-home"></span></li>
                    <li>@Html.ActionLink("Manage Residents", "Index", "Residents")</li>
                    <li class="dropdown">
                        <button class="btn navbar-btn dropdown-toggle" type="button" data-toggle="dropdown">
                            Resident Reports
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Single User Report", "Reports", "Home")</li>
                            <li>@Html.ActionLink("Demographic Report", "GroupReports", "Home")</li>
                        </ul>
                    </li>
                    @Html.Partial("_LoginPartial")
                    </ul>
                
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - FIVE STAR </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


    @RenderSection("scripts", required: false)
</body>
</html>
