<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="col-lg-offset-2">
        
        <h1>Welcome to FIVE STAR Resident Tracking System</h1>
    </div>
    <div class="navbar navbar-nav" style="background-color: #010039">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><button class="btn navbar-btn btn-margin-right" type="button"onclick="window.location.href='@Url.Action("Index")'"><span class="glyphicon glyphicon-home"></span> Home</button></li>
                    <li><button class="btn navbar-btn btn-margin-right" type="button" onclick="window.location.href='@Url.Action("Resident")'">Resident</button></li>
                    <li class="dropdown">
                        <button class="btn navbar-btn dropdown-toggle" type="button" data-toggle="dropdown">
                            Resident Reports
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Single User Report", "Reports", "Home")</li>
                            <li>@Html.ActionLink("Demographic Report", "GroupReports", "Home")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
       
        @RenderBody()
        <br />
  
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FIVE STAR </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
