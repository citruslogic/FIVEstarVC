@model IEnumerable<FIVESTARVC.Models.Room>

@{
    ViewBag.Title = "Index";
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    <script type="text/javascript">

        $(document).ready(function () {
            $(".getdate").each(function () {
                $(this).datepicker();
            });
        });

    </script>
}
<style>
    .rooms table {
        width: 100%;
    }

    .rooms thead, .rooms tbody, .rooms tr, .rooms td, .rooms th {
        display: block;
    }

        .rooms tr:after {
            content: ' ';
            display: block;
            visibility: hidden;
            clear: both;
        }

        .rooms thead th {
            height: 50px;
            /*text-align: left;*/
        }

    .rooms tbody {
        height: 200px;
        overflow-y: auto;
    }

    .rooms thead {
        /* fallback */
    }

        .rooms tbody td, .rooms thead th {
            width: 21.2%;
            float: left;
        }
</style>

