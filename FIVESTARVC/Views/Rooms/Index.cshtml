@model IEnumerable<FIVESTARVC.Models.Room>

@{
    ViewBag.Title = "Index";
}

@*<h2>!!CAUTION!! This will add or edit the ROOMS in the database.</h2>*@
<br />
<li class="btn-block">
    <input type="button" class="btn" value="New Room" onclick="location.href='/Rooms/Create';" />

    <input type="button" class="btn" value="Return To Resident" onclick="location.href='/Residents/Index';" />
    &nbsp;

</li>
