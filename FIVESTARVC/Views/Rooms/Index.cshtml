<br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RoomNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsOccupied)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WingName)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoomNumber)
                        </td>
                        <td>
                            @(item.IsOccupied ? "Yes" : "No")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WingName)
                        </td>


                        <td class="btn-block">
                            <input type="button" class="btn" value="Details" onclick="location.href='/Rooms/Details';" />

                            <input type="button" class="btn btn-danger" value="Delete" onclick="location.href='/Rooms/Delete';" />
                            &nbsp;

                        </td>

                    </tr>

                }

            </table>
        </div>
    </div>
</div>


<p>
    <input type="button" class="btn" value="Return To Resident" onclick="location.href='/Residents/Index';" />
</p>
