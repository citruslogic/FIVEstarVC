@model IEnumerable<FIVESTARVC.Models.Room>

@{
    ViewBag.Title = "Index";
}

<style>
    .rooms table {
        width: 100%;
    }

    .rooms thead, .rooms tbody, .rooms tr, .rooms td, .rooms th {
        display: block;
    }

        .rooms tr:after {
            content: ' ';
            display: block;
            visibility: hidden;
            clear: both;
        }

        .rooms thead th {
            height: 50px;
            /*text-align: left;*/
        }

    .rooms tbody {
        height: 200px;
        overflow-y: auto;
    }

    .rooms thead {
        /* fallback */
    }

    .rooms tbody td, .rooms thead th {
        width: 21.2%;
        float: left;
    }
</style>

@*<h2>!!CAUTION!! This will add or edit the ROOMS in the database.</h2>*@
<br />
<li class="btn-block">
    <input type="button" class="btn btn-success" value="New Room" onclick="location.href='/Rooms/Create';" />

    <input type="button" class="btn btn-secondary" value="Return To Resident" onclick="location.href='/Residents/Index';" />
    &nbsp;

</li>
