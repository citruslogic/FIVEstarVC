@model FIVESTARVC.Models.ProgramEvent

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div style="margin-top: 1em; padding-left: 5px; padding-bottom: 1px;">
            <h4>Event category: @Model.ProgramType.EventType.ToString().ToLower()</h4>
        </div>
        <br />
        <h6>Change this event for the resident, and click Update to make the change. </h6>
        <hr />
        @Html.ValidationSummary(true, "")
        @Html.HiddenFor(model => model.ProgramEventID)

        <div class="form-group">
            For resident <strong>@String.Concat(Model.Resident.ClearFirstMidName, " ", Model.Resident.ClearLastName)</strong>
            @Html.HiddenFor(model => model.ResidentID)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProgramTypeID, "Event", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("ProgramTypeID", null, htmlAttributes: new { @class = "form-control", @title = "You can only select events of the same type." })
                @Html.ValidationMessageFor(model => model.ProgramTypeID, "")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClearStartDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="input-group mb-2 col-sm-3">
                <div class="input-group-prepend">
                    <span class="input-group-text fa fa-calendar fa-fw" style="width:40px;"></span>
                </div>
                @Html.EditorFor(model => model.ClearStartDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ClearStartDate, "")
            </div>
            @Html.LabelFor(model => model.ClearEndDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="input-group mb-2 col-sm-3">
                <div class="input-group-prepend">
                    <span class="input-group-text fa fa-calendar fa-fw" style="width:40px;"></span>
                </div>
                @Html.EditorFor(model => model.ClearEndDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.ClearEndDate, "")
        </div>




        <div class="form-group">
            @Html.LabelFor(model => model.Completed, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Completed)
                    @Html.ValidationMessageFor(model => model.Completed, "")
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
                &nbsp;
                <input type="button" class="btn btn-success" value="Back to Tracks" onclick="location.href='/ProgramEvents/Index';" />
                &nbsp;
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")

    <script type="text/javascript">
        if (!Modernizr.inputtypes.date) {
            $('input[type=date]')
                .attr('type', 'text')
                .datepicker({
                    // Consistent format with the HTML5 picker
                    dateFormat: 'mm/dd/yy'
                });
        }
    </script>
}
