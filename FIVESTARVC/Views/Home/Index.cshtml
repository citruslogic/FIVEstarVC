@model FIVESTARVC.Models.Resident

@{
    ViewBag.Title = "Dashboard";
}

<h2> Dashboard </h2>       
<p>Residents recently admitted into your center.</p>

<div class="row">



        @foreach (var item in ViewBag.lastFiveResidents)
        {
            <div class="col-md-2">
                <div class="card col-md-12">
                    <div class="card-body">
                        <h5 class="card-title">@item.FirstMidName @item.LastName</h5>
                        @* Room number could go here. *@<br />
                        <input type="button" class="btn-default" value="See more" onclick="location.href='/Residents/Details/@item.ResidentID/';" />
                    </div>
                </div>
            </div>
        }



</div>

<br />
