@model FIVESTARVC.Models.ProgramEvent
@using FIVESTARVC.Models

@{
    Layout = null;
}

<!-- Modal -->
<div class="container">
    

        @using (Html.BeginForm("ViewQuickEvent", "Residents"))
    {
        @Html.AntiForgeryToken()

    <div class="row">
        <input type="hidden" name="ResidentID" value="@ViewBag.ResidentID" />
        <p>
            @ViewBag.Fullname is starting a new program. Provide an <code>End Date</code> if
            the program's end date for the resident is known.
        </p>
        <div class="form-group">
            @Html.LabelFor(model => model.ProgramTypeID, "Program name", htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.DropDownList("ProgramTypeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProgramTypeID, "")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClearStartDate, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.ClearStartDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ClearStartDate, "")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClearEndDate, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.ClearEndDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ClearEndDate, "")
            </div>
        </div>

        </div>
        <div class="row">
        <div class="form-group">
            @Html.LabelFor(model => model.Completed, htmlAttributes: new { @class = "control-label" })
            <div>
                <div class="checkbox">
                    @Html.EditorFor(model => model.Completed, new { htmlAtributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Completed, "")
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
            <div class="form-group form-inline">
                <div class="btn-toolbar mr-1">
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal">
                        Cancel
                    </button>

                    <button type="submit" id="submit-btn"
                            class="btn btn-primary"
                            style="margin-left: 5px;">
                        Save Event
                    </button>
                </div>
            </div>
   </div>

        }

</div>
 


        @section scripts {
            <script type="text/javascript">
                $(function () {
                    $('#submit-btn').click(function () {
                        $('#modal-container').modal('hide');
                    });
                });
            </script>
        }

