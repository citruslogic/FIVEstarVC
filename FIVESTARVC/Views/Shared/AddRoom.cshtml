@model FIVESTARVC.Models.Room
@using FIVESTARVC.Models;

@{
    Layout = null;

    AjaxOptions options = new AjaxOptions();
    options.HttpMethod = "POST";
    options.Url = Url.Action("AddRoom", "Residents");
    options.UpdateTargetId = "modalForm";
    options.InsertionMode = InsertionMode.Replace;
}



@using (Ajax.BeginForm("AddRoom", "Residents", options, new { @class = "form-horizontal", role = "form" }))
{
    <div id="modalForm">
        <div class="modal-header">
            <h4 class="modal-title" id="AddRoomLAbel">Add Room</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

        </div>
        <div class="modal-body">

            <p> Type in the Room you would like to add.</p>
            <br />
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-inline col-md-2">
                @Html.LabelFor(Model => Model.RoomNum, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(Model => Model.RoomNum, htmlAttributes: new { @class = "form-control offset-1" })

                @Html.ValidationMessageFor(Model => Model.RoomNum, "", new { @class = "text-danger" })

            </div>
            <div class="form-inline col-md-2">
                @Html.LabelFor(Model => Model.WingName, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(Model => Model.WingName, htmlAttributes: new { @class = "form-control offset-2" })
            </div>
                <br />
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>

            </div>
        </div>
}

@section Scripts {
    <script type="text/javascript">

        $.validator.unobtrusive.parse($("form"));
    </script>

}
