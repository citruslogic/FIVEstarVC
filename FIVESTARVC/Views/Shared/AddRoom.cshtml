@model FIVESTARVC.Models.Room

@{
    Layout = null;

    AjaxOptions options = new AjaxOptions();
    options.HttpMethod = "POST";
    options.Url = Url.Action("AddRoom", "Rooms");
    options.UpdateTargetId = "modalFormRoom";
    options.InsertionMode = InsertionMode.Replace;
}



@using (Ajax.BeginForm("AddRoom", "Rooms", options, new { @class = "form-horizontal", role = "form" }))
{
<div id="modalFormRoom">
    <div class="modal-header">
        <h4 class="modal-title" id="AddRoomLabel">Add Room to Center</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

    </div>
    <div class="modal-body">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <p> Type in the information for the room and then click Add.</p>
            <br />


            <div class="form-group form-inline">
                @Html.LabelFor(Model => Model.RoomNumber, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(Model => Model.RoomNumber, htmlAttributes: new { @class = "form-control offset-1" })
            </div>
            <div class="form-group form-inline">

                @Html.LabelFor(Model => Model.WingName, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(Model => Model.WingName, htmlAttributes: new { @class = "form-control offset-2" })
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Add</button>
            </div>

        </div>
    </div>
</div>
 }
            


@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">

    $.validator.unobtrusive.parse($("form"));
</script>

}
