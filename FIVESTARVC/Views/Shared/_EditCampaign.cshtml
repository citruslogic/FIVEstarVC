@model FIVESTARVC.Models.MilitaryCampaign
@using FIVESTARVC.Models;

@{
    Layout = null;
}


@using (Html.BeginForm("EditCampaign", "Residents"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <p> Select the Campaign you would like to edit.</p>
        <br />


        <div>

            @Html.LabelFor(model => model.CampaignName, htmlAttributes: new { @class = "control-label col-md-offset-3" })

            @Html.DropDownListFor(p => p.MilitaryCampaignID, Model.CampaignIEnum, "Select Campaign")
        </div>

        <div>
            @

            <input type="text" name="NewCampaign" /> 
            @
        </div>
           
        
        <div class="form-group form-inline">
            <div class="col-md-2">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    Cancel
                </button>
            </div>
            <div class="col-md-2">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>

        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
            $(function () {
                $('#submit-btn').click(function () {
                    $('#modal-container').modal('hide');
                });
            });
    </script>

}