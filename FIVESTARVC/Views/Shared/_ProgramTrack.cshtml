{

    <td class="p-md-4">
        <input type="button" class="removeRow btn btn-sm btn-danger" value="Remove" />



    </td>
    <td>
        @Html.HiddenFor(m => m.IsDeleted, new { data_is_deleted = "false" })
        @Html.LabelFor(model => model.ProgramTypeID, "Track name", htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.DropDownList("ProgramTypeID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProgramTypeID, "")
        </div>
    </td>
    <td>
        @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StartDate, "")
        </div>
    </td>
    <td>
        @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label" }) (optional)
