@model FIVESTARVC.Models.Resident
@using PagedList.Mvc;
@using FIVESTARVC.Models;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Reports";
}

<h2>Center Summary</h2>
<hr />
<button class="btn btn-default" onclick="location.href='/Reports/Historic';"style="background-color: lightsteelblue"> Historic Chart </button> <button class="btn btn-default" onclick="location.href='/Reports/campaigns';" style="background-color: lightsteelblue"> Campaign Data Chart </button>


<br>
<br>
<h4>Cumulative Residents: @Html.Raw(ViewBag.CumulativeCount)</h4>
<h4>Current Residents: @Html.Raw(ViewBag.TotalCount)</h4>
<h4>Total Graduated: @Html.Raw(ViewBag.Graduated)</h4>
<br>
@Html.ActionLink("Download Data", "DownloadData")
<br>

<h3>Center Statistics</h3>
<table class="table">
    <tr>
        <th style="font-weight: bold; color:dodgerblue; font-size: 110%">
            Metric
        </th>
        <th style="font-weight: bold; color:dodgerblue; font-size: 110%">
            Cumulative Total
        </th>
    </tr>
    <tr>
        <td>
            Admitted
        </td>
        <td>
            @{
                if (ViewBag.Admitted == null)
                { <text>0</text> }
            else
            {
                @Html.Raw(ViewBag.Admitted)
            }
            }
        </td>
    </tr>
    <tr>
        <td>

            Emergency Shelter
        </td>
        <td>
            @{
                if (ViewBag.EmergencyShelter == null)
