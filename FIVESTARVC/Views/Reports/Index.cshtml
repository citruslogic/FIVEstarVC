@model FIVESTARVC.Models.Resident
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Reports";
}

<h2>Center Summary</h2>
<hr />
<button class="btn btn-default" onclick="location.href='/Reports/Historic';"> Monthly Breakdown </button>
<br>
<br>
<h4>Current Residents: @Html.Raw(ViewBag.TotalCount)</h4>
<h4>Total Graduated: @Html.Raw(ViewBag.Graduated)</h4>
<br>
@Html.ActionLink("Download Data", "DownloadData")
<br>

<br>
