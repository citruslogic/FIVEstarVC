            @{
                if (ViewBag.GraduatedPercent == null)
                { <text>0</text> }
            else
            {
                @Html.Raw(ViewBag.GraduatedPercent)
            }
            }
            %
        </td>
    </tr>
    <tr>
        <td>
            Vet Court
        </td>
